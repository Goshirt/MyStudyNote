package com.wtt.framework.util.charset;

import java.io.IOException;
import java.io.UnsupportedEncodingException;

/**
 * 
 * The package of com.wtt.framework.util.charset is with reference to
 * http://www.mandarintools.com/javaconverter.html
 * 
 * 
 * Description: The below methods is used for convert the storing charset
 * between - ISO <--> UTF8 / BIG5 - BIG5(UTF8) <--> GB2312(UTF8)
 * 
 */

public class ChineseUtil extends Zhcode {
    private static ChineseUtil instance = new ChineseUtil();
    
    private ChineseUtil() {}
    
    public static ChineseUtil getInstance() {
       return instance;
    }
    
	public String convert(String input, String from, String to)
			throws IOException, UnsupportedEncodingException {
		byte[] fieldByteValue = input.getBytes(from);
		String fieldStringValue = new String(fieldByteValue, to);
		return fieldStringValue;
	}

	public String big5ToIso8859(String input) throws IOException,
			UnsupportedEncodingException {
		return convert(input, "BIG5", "ISO-8859-1");
	}

	public String iso8859ToUtf8(String input) throws IOException,
			UnsupportedEncodingException {

		return convert(input, "ISO-8859-1", "UTF-8");
	}

	public String utf8ToIso8859(String input) throws IOException,
			UnsupportedEncodingException {
		return convert(input, "UTF-8", "ISO-8859-1");
	}

	public String iso8859ToBig5(String input) throws IOException,
			UnsupportedEncodingException {

		return convert(input, "ISO-8859-1", "BIG5");
	}

	public String simplifiedToTraditional(String input) {
		String fieldStringValue = this.convertString(input, UTF8S, BIG5);

		return fieldStringValue;
	}

	public String traditionalToSimplified(String input) {
		String fieldStringValue = this.convertString(input, BIG5, UTF8S);

		return fieldStringValue;
	}

	public String isoBig5ToUtf8(String input) throws IOException,
			UnsupportedEncodingException {
		String s1 = iso8859ToBig5(input);
		String s2 = convertString(s1, BIG5, UTF8);
		String s3 = utf8ToIso8859(s2);
		return s3;
	}

}
